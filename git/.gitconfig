[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	editor = nvim
	excludesFile = ~/.gitignore
[alias]
	smu = submodule update --init --recursive
	adog = log --all --decorate --oneline --graph
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
    path = nvim
[init]
	defaultBranch = main
